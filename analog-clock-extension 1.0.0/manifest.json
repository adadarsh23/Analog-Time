{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "1.0.0",
  "default_locale": "en",
  "short_name": "AnalogClock",
  "author": "Ad Adarsh",
  "offline_enabled": true,
  "homepage_url": "https://github.com/adadarsh23/Date-and-Time-Extension",
  "icons": {
    "16": "icons/icons8-time-dotted-16.png",
    "32": "icons/icons8-time-dotted-32.png",
    "57": "icons/icons8-time-dotted-57.png",
    "60": "icons/icons8-time-dotted-60.png",
    "70": "icons/icons8-time-dotted-70.png",
    "72": "icons/icons8-time-dotted-72.png",
    "76": "icons/icons8-time-dotted-76.png",
    "80": "icons/icons8-time-80.png",
    "96": "icons/icons8-time-dotted-96.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons8-time-dotted-16.png",
      "32": "icons/icons8-time-dotted-32.png",
      "96": "icons/icons8-time-dotted-96.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "welcome.html",
  "permissions": ["storage"],
  "host_permissions": [
    "*://api.openweathermap.org/"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open the Clock extension popup"
    },
    "open_privacy_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open the Privacy Policy page"
    },
    "reload_clock": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Reload the clock view"
    },
    "toggle_dark_mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Toggle dark mode in the clock"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "font/*.ttf",
        "icons/*.png",
        "style/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
